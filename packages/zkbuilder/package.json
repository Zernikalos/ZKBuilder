{
  "name": "@zernikalos/zkbuilder",
  "version": "0.0.1",
  "license": "MPL 2.0",
  "author": "Aaron Negrin",
  "main": "dist-node/index.js",
  "browser": "dist-browser/index.js",

  "types": "./build/src/index.d.ts",
  "scripts": {
    "start": "webpack watch --mode=development",
    "build": "npm-run-all build:browser build:node",
    "build:browser": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "build:profile": "webpack --env useMode=profile",
    "build:node": "webpack --mode=development --target=node",
    "prebuild": "npm-run-all clean:build",
    "parse": "babel-node index.js",
    "generate": "run-s clean:proto proto:folder proto:generate",
    "proto:folder": "make-dir protobuild",
    "proto:generate": "run-s proto:generate:pbjs proto:generate:pbts",
    "proto:generate:pbjs": "pbjs --target static-module --wrap es6 --es6 --force-message --no-delimited --out protobuild/index.js proto/zko.proto",
    "proto:generate:pbts": "pbts --no-comments --out protobuild/index.d.ts protobuild/index.js",
    "clean": "run-s clean:proto clean:build clean:modules",
    "clean:proto": "rimraf protobuild",
    "clean:build": "rimraf dist build dist-browser dist-node",
    "clean:modules": "rimraf node_modules"
  },
  "dependencies": {
    "@xmldom/xmldom": "0.9.8",
    "@zernikalos/zernikalos": "file:../../../Zernikalos/build/js/packages/@zernikalos/zernikalos",
    "get-own-enumerable-property-symbols": "3.0.2",
    "is-obj": "3.0.0",
    "is-regexp": "3.1.0",
    "isbinaryfile": "5.0.4",
    "lodash": "4.17.21",
    "protobufjs": "7.5.3",
    "three": "0.178.0"
  },
  "devDependencies": {
    "@types/lodash": "4.17.19",
    "@types/node": "24.0.8",
    "@types/object-hash": "3.0.6",
    "@types/three": "0.177.0",
    "make-dir-cli": "4.0.0",
    "npm-run-all2": "8.0.4",
    "protobufjs-cli": "1.2.0",
    "rimraf": "6.0.1",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "webpack": "5.99.9",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "6.0.1",
    "webpack-merge": "6.0.1"
  }
}
